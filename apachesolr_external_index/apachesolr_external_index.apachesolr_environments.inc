<?php

/**
 * @file
 * Bulk export of apachesolr_environments objects generated by Bulk export module.
 */

/**
 * Implements hook_apachesolr_environments().
 */
function apachesolr_external_index_apachesolr_environments() {
  $environments = array();

  $environment = new stdClass();
  $environment->api_version = 1;
  // INDEX_ID is defined in the .module
  $environment->env_id = APACHESOLR_EXTERNAL_INDEX_ID;
  $environment->name = 'External transPLANT index';
  $environment->url = 'http://localhost:8983/solr/transPlant';
  $environment->service_class = '';
  $environment->conf = array(
    'facet callbacks' => array('apachesolr_external_index_facet_callback'),
    'apachesolr_read_only' => '1',
    'apachesolr_search_facet_pages' => '',
    'apachesolr_search_show_facets' => 0,
    'field_bias'  => array(
      'id'        => '5.0',
      'obj_desc'  => '1.0',
      'obj_type'  => '0.5',
      'provider'  => '0.5',
      'species'   => '0.5',
      'src_url'   => '0.0',
      'timestamp' => '0',
    ),
  );
  $environment->index_bundles = array();
  $environments[$environment->env_id] = $environment;

  return $environments;
}

